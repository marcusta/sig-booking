{
  "name": "sig-booking",
  "module": "src/server.ts",
  "type": "module",
  "scripts": {
    "migrate": "bun src/db/migrate.ts",
    "seed": "bun ./scripts/seed.ts",
    "db:migrate": "bun ./scripts/migrate.ts",
    "db:health": "bun ./scripts/health.ts",
    "db:generate": "bunx drizzle-kit generate --dialect sqlite --schema ./src/db/schema.ts --out ./src/db/migrations",
    "db:studio": "bunx drizzle-kit studio --dialect sqlite --schema ./src/db/schema.ts --out ./src/db/migrations",
    "dev": "bun run --watch src/server.ts",
    "test": "bun test"
  },
  "devDependencies": {
    "@types/bun": "^1.1.11",
    "drizzle-kit": "^0.26.2",
    "@types/jsonwebtoken": "^9.0.8"
  },
  "peerDependencies": {
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@elysiajs/static": "^1.1.1",
    "better-sqlite3": "^11.4.0",
    "drizzle-orm": "^0.35.2",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.33.5",
    "winston": "^3.15.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
